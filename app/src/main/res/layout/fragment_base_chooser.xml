<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="132dp"
            android:layout_height="76dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/currency_flag"
                android:layout_width="132dp"
                android:layout_height="76dp"
                android:contentDescription="@string/country_flag_of_the_currency"
                android:scaleType="fitCenter" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currency_name">

            <TextView
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/roboto"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorBlack"
                android:textSize="35sp"
                android:textStyle="bold"
                tools:text="888.0088" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/currency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:singleLine="true"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            tools:text="Name of currency" />

        <TextView
            android:id="@+id/currency_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="@color/colorLightGray"
            android:textSize="45sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView"
            tools:text="RUB" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

                <ImageButton
                    android:id="@+id/b_07"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toTopOf="@+id/b_04"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toStartOf="@+id/b_08"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/b_08"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toTopOf="@+id/b_05"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toStartOf="@+id/b_09"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/b_07"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/b_09"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toTopOf="@+id/b_06"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toStartOf="@+id/b_ok_1000"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/b_08"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/b_ok_1000"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toTopOf="@+id/b_ok_100"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/b_09"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/b_04"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toTopOf="@+id/b_01"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toStartOf="@+id/b_05"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/b_07" />

                <ImageButton
                    android:id="@+id/b_05"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toTopOf="@+id/b_02"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toStartOf="@+id/b_06"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/b_04"
                    app:layout_constraintTop_toBottomOf="@+id/b_08" />

                <ImageButton
                    android:id="@+id/b_06"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toTopOf="@+id/b_03"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toStartOf="@+id/b_ok_100"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/b_05"
                    app:layout_constraintTop_toBottomOf="@+id/b_09" />

                <ImageButton
                    android:id="@+id/b_ok_100"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toTopOf="@+id/b_ok_10"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/b_06"
                    app:layout_constraintTop_toBottomOf="@+id/b_ok_1000" />

                <ImageButton
                    android:id="@+id/b_01"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toTopOf="@+id/b_0"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toStartOf="@+id/b_02"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/b_04" />

                <ImageButton
                    android:id="@+id/b_02"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toTopOf="@+id/b_comma"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toStartOf="@+id/b_03"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/b_01"
                    app:layout_constraintTop_toBottomOf="@+id/b_05" />

                <ImageButton
                    android:id="@+id/b_03"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toTopOf="@+id/b_erase"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toStartOf="@+id/b_ok_10"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/b_02"
                    app:layout_constraintTop_toBottomOf="@+id/b_06" />

                <ImageButton
                    android:id="@+id/b_ok_10"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toTopOf="@+id/b_ok_1"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/b_03"
                    app:layout_constraintTop_toBottomOf="@+id/b_ok_100" />

                <ImageButton
                    android:id="@+id/b_0"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toStartOf="@+id/b_comma"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/b_01" />

                <ImageButton
                    android:id="@+id/b_comma"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toStartOf="@+id/b_erase"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/b_0"
                    app:layout_constraintTop_toBottomOf="@+id/b_02" />

                <ImageButton
                    android:id="@+id/b_erase"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toStartOf="@+id/b_ok_1"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/b_comma"
                    app:layout_constraintTop_toBottomOf="@+id/b_03" />

                <ImageButton
                    android:id="@+id/b_ok_1"
                    style="@style/baseChooserButton"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="@string/baseChooserButtonRatio"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/b_erase"
                    app:layout_constraintTop_toBottomOf="@+id/b_ok_10" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/b_convert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:text="@string/convert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>